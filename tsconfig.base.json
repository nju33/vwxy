{
  "include": [
    "src"
  ],
  "exclude": [
    "src/__mocks__/**/*",
    "src/__tests__/**/*",
    "src/**/*.test.ts*"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
